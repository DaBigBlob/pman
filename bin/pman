#!/bin/sh

SHARE="$HOME/.pman/share"

if [ "$1" = "start" ]
then
    CMMD="$2"
    PNAME="$3"
    
	#share run
   	if [ ! -f "$SHARE/start" ]
    then
    	printf "Fatal error: %s missing. Please reinstall pman." "$SHARE/start"
    	return 1
    fi
    "$SHARE/./start" "$PNAME" "$CMMD"
    #done
    
elif [ "$1" = "stop" ]
then
    SNAME="$2"

    #share run
   	if [ ! -f "$SHARE/stop" ]
    then
    	printf "Fatal error: %s missing. Please reinstall pman." "$SHARE/stop"
    	return 1
    fi
    "$SHARE/./stop" "$SNAME"
    #done
    
elif [ "$1" = "tail" ]
then
    SNAME="$2"

    #share run
   	if [ ! -f "$SHARE/tail" ]
    then
    	printf "Fatal error: %s missing. Please reinstall pman." "$SHARE/tail"
    	return 1
    fi
    "$SHARE/./tail" "$SNAME"
    #done
    
elif [ "$1" = "info" ]
then
    SNAME="$2"

    #share run
   	if [ ! -f "$SHARE/info" ]
    then
    	printf "Fatal error: %s missing. Please reinstall pman." "$SHARE/info"
    	return 1
    fi
    "$SHARE/./info" "$SNAME"
    #done
elif [ "$1" = "update" ]
then
    OK=$(curl -s "https://raw.githubusercontent.com/DaBigBlob/pman/main/OK")
    if [ "$OK" = "ok_boomer" ]
    then
        printf "Internet OK. Downloading... " 
        curl -s "https://raw.githubusercontent.com/DaBigBlob/pman/main/share/start" > "$SHARE/start"
        curl -s "https://raw.githubusercontent.com/DaBigBlob/pman/main/share/stop" > "$SHARE/stop"
        curl -s "https://raw.githubusercontent.com/DaBigBlob/pman/main/share/tail" > "$SHARE/tail"
        curl -s "https://raw.githubusercontent.com/DaBigBlob/pman/main/share/info" > "$SHARE/info"
        chmod -x "$SHARE/start" "$SHARE/stop" "$SHARE/tail" "$SHARE/info"
        printf "Done.\n"
    else
        printf "No Internet."
        return 1
    fi
    #done

else
	#will write ./ptable latr; too bored rn;
   	if [ ! -f "$SHARE/ptable" ]
    then
    	#printf "Fatal error: %s missing. Please reinstall pman." "$SHARE/tail"
    	return 1
    fi
    #"$SHARE/./ptable"
    #done
fi


